.navbar {
    position: relative;
    top: 0;
    z-index:500;

    display: flex;
    width: 100%;

    background-color: white;
    border-bottom:1rpx solid #CCCCCC;
    box-shadow:0 2rpx 4rpx #ddd;
}

.navbar-item {
    position: relative;
    display: block;
    flex: 1;
    text-align: center;

    padding: 15rpx 0;

    border-right: 1px solid #CCC;
    font-size: 36rpx;
}

.navbar-item:last-child {
    border-right: 0px;
}

.navbar-item.selected {
    background-color: #EAEAEA;
    border-bottom: 2px solid #54BFAE;
}
